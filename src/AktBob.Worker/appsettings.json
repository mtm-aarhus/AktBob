{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "System.NET.Http": "Debug",
        "Hangfire": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} [{Level:u3}] [{SourceContext}] {Message:j} {NewLine}{Exception}"
        }
      },
      {
        "Name": "Email",
        "Args": {
          "restrictedToMinimumLevel": "Warning",
          "from": "noreply@aarhus.dk",
          "to": "jojan@aarhus.dk",
          "host": "localhost",
          "port": 25,
          "subject": "AktBob Log Messages",
          "body": "{Timestamp:HH:mm:ss.fff} [{Level:u3}] [{SourceContext}] {Message:j}{NewLine}{Exception}",
          "batchPostingLimit": {
            "batchingSizeLimit": 10,
            "period": "00:00:10"
          }
        }
      }
    ]
  }
}
